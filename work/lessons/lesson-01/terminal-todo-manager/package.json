{
    "name": "terminal-todo-manager",
    "version": "1.0.0",
    "description": "A sophisticated terminal-based todo management application built with TypeScript and Blessed",
    "main": "dist/index.js",
    "scripts": {
      "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
      "build": "tsc",
      "start": "node dist/index.js",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:coverage": "jest --coverage",
      "lint": "eslint src/**/*.ts",
      "format": "prettier --write src/**/*.ts",
      "clean": "rm -rf dist",
      "prebuild": "npm run clean"
    },
    "keywords": [
      "todo",
      "terminal",
      "blessed",
      "typescript",
      "mvc"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
      "blessed": "^0.1.81",
      "chalk": "^4.1.2",
      "commander": "^11.1.0",
      "date-fns": "^2.30.0",
      "fuse.js": "^7.0.0",
      "uuid": "^9.0.1"
    },
    "devDependencies": {
      "@types/blessed": "^0.1.25",
      "@types/jest": "^29.5.10",
      "@types/node": "^20.10.3",
      "@types/uuid": "^9.0.7",
      "@typescript-eslint/eslint-plugin": "^6.13.2",
      "@typescript-eslint/parser": "^6.13.2",
      "eslint": "^8.55.0",
      "eslint-config-prettier": "^9.1.0",
      "jest": "^29.7.0",
      "nodemon": "^3.0.2",
      "prettier": "^3.1.0",
      "ts-jest": "^29.1.1",
      "ts-node": "^10.9.1",
      "typescript": "^5.3.2"
    }
  }